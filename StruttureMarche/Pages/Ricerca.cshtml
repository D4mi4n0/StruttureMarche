@page
@model StruttureMarche.Pages.RicercaModel
@{
    ViewData["Title"] = "Ricerca Strutture";
}

<div class="text-center">
    <h1 class="display-4">Ricerca Strutture Ricettive</h1>
    <p>Utilizza i filtri sottostanti per cercare le strutture ricettive nella regione Marche.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="get" asp-controller="Ricerca" asp-action="GetStrutture">
            <div class="form-group">
                <label for="denominazione">Denominazione</label>
                <input type="text" class="form-control" id="denominazione" name="denominazione" value="@Model.Ricerca.Denominazione" />
            </div>
            <div class="form-group">
                <label for="comune">Comune</label>
                <input type="text" class="form-control" id="comune" name="comune" value="@Model.Ricerca.Comune" />
            </div>
            <div class="form-group">
                <label for="provincia">Provincia</label>
                <input type="text" class="form-control" id="provincia" name="provincia" value="@Model.Ricerca.Provincia" />
            </div>
            <button type="submit" class="btn btn-primary">Cerca</button>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Denominazione</th>
                    <th>Comune</th>
                    <th>Provincia</th>
                    <th>Indirizzo</th>
                    <th>Telefono</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var struttura in Model.Ricerca.Strutture)
                {
                    <tr>
                        <td>@struttura.Denominazione</td>
                        <td>@struttura.Comune</td>
                        <td>@struttura.Provincia</td>
                        <td>@struttura.Indirizzo</td>
                        <td>@struttura.Telefono</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
